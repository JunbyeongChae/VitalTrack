# 1단계: React 앱 빌드
FROM node:18 AS build
WORKDIR /app

# package.json만 먼저 복사해서 의존성 캐시 활용
COPY front_end/package*.json ./
RUN npm ci

# 나머지 소스 복사
COPY front_end/ ./
RUN npm run build

# Nginx 스테이지
FROM nginx:alpine
COPY --from=builder /app/build /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
